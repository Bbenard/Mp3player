<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.benard.pewahewa.player">

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="false"
        android:id="@+id/seek_Bar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fwd"
        android:id="@+id/btfb"
        android:layout_below="@+id/seek_Bar"
        android:layout_alignParentLeft="true"
        android:background="@color/colorPrimary"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btprv"
        android:text="@string/prev"
        android:layout_below="@+id/seek_Bar"
        android:layout_toRightOf="@+id/btfb"
        android:background="@color/colorPrimary"
        android:layout_toEndOf="@+id/btfb" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NEXT"
        android:id="@+id/btnxt"
        android:layout_below="@+id/seek_Bar"
        android:layout_toRightOf="@+id/btprv"
        android:background="@color/colorPrimary"
        android:layout_toEndOf="@+id/btprv" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/I"
        android:id="@+id/bt_ffw"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/seek_Bar"
        android:layout_alignRight="@+id/seek_Bar"
        android:layout_alignEnd="@+id/seek_Bar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/II"
        android:id="@+id/bt_play"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/btprv"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
